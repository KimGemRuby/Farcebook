<h1>Posts :</h1>


<% @posts.each do |post| %>
    <h2><%= post.title %></h2>
    <p><%= post.content %></p>
    <p>
        <a href="<%= post_path(post.id) %>" class="btn btn-primary">Show more</a>
        <a href="<%= edit_post_path(post.id) %>" class="btn btn-secondary">Edit Piaf</a>
        <a href="<%= edit_post_path(post.id) %>" class="btn btn-info" data-confirm="Are U update?" data-method="UPDATE">Update</a>
        <a href="<%= post_path(post.id) %>" class="btn btn-danger" data-confirm="Are you sure ?" data-method="DELETE">Delete</a>
        <button type="button" class="btn btn-warning">Add to Cart</button>
        <button type="button" class="btn btn-light">Add to List</button>
        
    </p>
<% end %>

<p>
    <a href="<%= new_post_path %>" class="btn btn-success">Post your gossip</a> 
</p>